mixin badge(url)
  img(src='https://' + (badge_style ? badge_style + '.' : '') + 'badgen.net/' + url.replace(/^\//, ''))

mixin badge-npm(name)
  a(href='https://www.npmjs.org/package/' + name)
    +badge('/npm/v/' + name)

mixin badge-version(version)
  //- probably want different colors for different versions
  a(href='http://nodejs.org/download/')
    if ((version_cmp = Number(version.toString().split('.').slice(0, 2).map(function (n) { return (n < 10 ? '0' : '') + n }).join('.'))))
      +badge('/badge/node.js/>=%20' + version + '/' +
        (version_cmp >= 10.0 ? 'orange' : version_cmp >= 8.0 ? 'yellow' : 'green'))
    else
      +badge('/badge/node.js/N%2FA/grey')

mixin badge-github-stars(repo)
  a(href='https://github.com/' + repo)
    +badge('/github/stars/' + repo)

mixin badge-github-open-issues(repo)
  a(href='https://github.com/' + repo + '/issues')
    +badge('/github/open-issues/' + repo)

mixin badge-github-open-prs(repo)
  a(href='https://github.com/' + repo + '/pulls')
    +badge('/github/open-prs/' + repo)

mixin badge-github-last-commit(repo)
  a(href='https://github.com/' + repo + '/pulls')
    +badge('/github/last-commit/' + repo)

mixin badge-david(repo)
  a(href='https://david-dm.org/' + repo)
    +badge('/david/dep/' + repo)

mixin badge-david-dev(repo)
  a(href='https://david-dm.org/' + repo + '?type=dev')
    +badge('/david/dev/' + repo)

mixin badge-travis(repo)
  a(href='https://travis-ci.org/' + repo)
    +badge('/travis/' + repo + '/master')

mixin badge-coveralls(repo)
  a(href='https://coveralls.io/r/' + repo)
    +badge('/coveralls/c/github/' + repo + '/master')

mixin badge-circleci(repo)
  a(href='https://circleci.com/gh/' + repo)
    +badge('/circleci/github/' + repo + '/master')

mixin badge-codecov(repo)
  a(href='https://codecov.io/gh/' + repo)
    +badge('/codecov/c/github/' + repo + '/master')

mixin badge-downloads(npm)
  a(href='https://npmjs.org/package/' + npm)
    +badge('/npm/dm/' + npm)

mixin bundle-size(npm)
  a(href='https://bundlephobia.com/result?p=' + npm)
    +badge('/bundlephobia/minzip/' + npm)

mixin install-size(npm)
  a(href='https://packagephobia.now.sh/result?p=' + npm)
    +badge('/packagephobia/install/' + npm)